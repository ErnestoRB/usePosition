{
  "name": "@ernestorb/useposition",
  "version": "1.0.0",
  "type": "module",
  "repository": "github:ErnestoRB/usePosition",
  "keywords": [
    "react hook",
    "usePosition",
    "boundingClientRect",
    "element position"
  ],
  "main": "./dist/index.umd.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "files": [
    "./dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "tsc --noEmit && vite build",
    "build": "tsc --declaration --emitDeclarationOnly --declarationDir './types' && api-extractor run --local --verbose && rm -rf './types'",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.29.2",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "typescript": "^4.6.4",
    "vite": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
