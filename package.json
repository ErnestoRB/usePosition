{
  "name": "@ernestorb/useposition",
  "version": "2.0.0",
  "type": "module",
  "repository": "github:ErnestoRB/usePosition",
  "keywords": [
    "react hook",
    "usePosition",
    "boundingClientRect",
    "element position"
  ],
  "main": "./dist/index.umd.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "files": [
    "./dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "tsc --noEmit && vite build",
    "build": "tsc --declaration --emitDeclarationOnly --declarationDir './types' && api-extractor run --local --verbose && rm -rf './types' && npm run doc",
    "prepare": "npm run build",
    "preview": "vite preview",
    "test": "jest",
    "doc": "api-documenter markdown -i ./docs/report -o ./docs"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.19.23",
    "@microsoft/api-extractor": "^7.29.2",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "jest-transform-stub": "^2.0.0",
    "jsdom": "^20.0.2",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.6.4",
    "vite": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
